<UserControl x:Class="Client.UserControls.ToolBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.UserControls" xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500">
    <Grid>
        <ToolBar Grid.Row="5" Background="Transparent">
            <Button x:Name="AddBN" Content="Добавить" Click="AddBN_Click"/>
            <hc:Divider Orientation="Vertical" Width="5" LineStroke="#FF0033FF"/>
            <Button x:Name="SaveBN" Content="Сохранить" Click="SaveBN_Click"/>
            <hc:Divider Orientation="Vertical" Width="5" LineStroke="#FF0033FF"/>
            <Button x:Name="DeleteBN" Content="Удалить" Click="DeleteBN_Click"/>
            <hc:Divider Orientation="Vertical" Width="5" LineStroke="#FF0033FF"/>
            <Button x:Name="UpdateBN" Content="Обновить" Click="UpdateBN_Click"/>
        </ToolBar>
    </Grid>
</UserControl>
