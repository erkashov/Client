<Window x:Class="Client.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Windows" xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="" Height="350" Width="400" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <TextBox x:Name="loginfdTB" hc:InfoElement.Placeholder="Логин" Width="0" MinHeight="0" Height="0" Visibility="Hidden"/>
        <TextBox x:Name="logidnTB" hc:InfoElement.Placeholder="Логин" Width="0" MinHeight="0" Height="0" Visibility="Hidden"/>
        <Image Source="/Images/logoMasterWood.png" Width="250"/>
        <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="20"/>
        <TextBox x:Name="loginTB" hc:InfoElement.Placeholder="Логин" Width="200"/>
        <TextBox x:Name="passwordTB" hc:InfoElement.Placeholder="Пароль" Width="200"/>
        <CheckBox Content="Запомнить" IsChecked="True"/>
        <Button x:Name="authBtn" Content="Войти" Style="{StaticResource ButtonSuccess}" Padding="3" Click="authBtn_Click"/>
    </StackPanel>
</Window>
